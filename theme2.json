{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#3c5644"
        },
        {
          "name": "Secondary Sand",
          "slug": "sand",
          "color": "#d5cabf"
        },
        {
          "name": "Background",
          "slug": "background",
          "color": "#edeae5"
        },
        {
          "name": "Text",
          "slug": "text",
          "color": "#0a0f0b"
        },
        {
          "name": "Muted",
          "slug": "muted",
          "color": "#9aa0a1"
        },
        {
          "name": "Accent",
          "slug": "accent",
          "color": "#abac9c"
        }
      ],
      "background": true,
      "defaultPalette": false,
      "custom": true
    },
    "typography": {
      "customFontSize": true,
      "fontFamilies": [
        {
          "fontFamily": "Brand Sans, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, Noto Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "Brand Sans",
          "slug": "brand-sans"
        }
      ]
    },
    "layout": {
      "contentSize": "760px",
      "wideSize": "1200px"
    },
    "spacing": {
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw"
      ],
      "blockGap": "1.2rem"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--brand-sans)",
      "lineHeight": "1.5"
    },
    "elements": {
      "heading": {
        "typography": {
          "lineHeight": "1.2"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "blocks": {}
  },
  "customTemplates": [
    {
      "name": "onepage",
      "title": "Onepager",
      "postTypes": [
        "page"
      ]
    }
  ]
}